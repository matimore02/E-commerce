{% extends 'base.html.twig' %}

{% block title %}Commenter index{% endblock %}

{% block body %}
    <h1>Commenter index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Commentaire</th>
                <th>Date_commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commenter in commenters %}
            <tr>
                <td>{{ commenter.id }}</td>
                <td>{{ commenter.commentaire }}</td>
                <td>{{ commenter.dateCommentaire ? commenter.dateCommentaire|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_commenter_show', {'id': commenter.id}) }}">show</a>
                    <a href="{{ path('app_commenter_edit', {'id': commenter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commenter_new') }}">Create new</a>
{% endblock %}
